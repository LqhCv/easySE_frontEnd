<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome = 1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta property="og:title" content="软件工程辅助平台">
    <meta name="keywords" content="软件工程辅助平台,知识图谱,教学辅助">
    <meta name="description" content="软件工程辅助平台是一个提供线上学习教学辅助的网站">
    <meta name="autor" content="周杰伦">
    <title>软件工程辅助平台</title>
    <style>
        html,
        body,
        #app {
            width: 100%;
            height: 100%;

        }

        #app {
            min-width: 1200px;
        }

        html {
            font-size: 10px;
        }

        div {
            font-size: 1.5rem;
        }
    </style>
</head>

<body>
    <div id="app"></div>
</body>
<script>
    var c = () => {
        let w = document.documentElement.clientWidth;//获取设备的宽度
        let n = (10 * (w / 1280) > 40 ? 40 + 'px' : 10 * (w / 1280) + 'px');
        document.documentElement.style.fontSize = n;
    }
    window.addEventListener("load", c);
    window.addEventListener("resize", c);
</script>

</html>